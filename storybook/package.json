{
  "name": "@carbon/vue-3-storybook",
  "license": "Apache-2.0",
  "version": "0.6.0",
  "description": "A collection of components for the Carbon Design System built using Vue.js",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "build-storybook": "build-storybook -c ../.storybook",
    "serve": "start-storybook -p 6006 -c ../.storybook",
    "ci-check": "yarn format:diff && yarn test --maxWorkers=5 && yarn build && yarn build-storybook --quiet",
    "format": "prettier --write '**/*.{scss,css,js,md,vue}' '!**/{build,es,lib,storybook,ts,umd,.coverage}/**'",
    "format:diff": "prettier --list-different '**/*.{scss,css,js,md,vue}' '!**/{dist,storybook-static,.coverage}/**'",
    "format:staged": "prettier --write '**/*.{scss,css,js,md,vue}' '!**/{dist,storybook-static,.coverage}/**'",
    "lint:css": "stylelint '{packages,storybook}/**/*.{vue,scss}'",
    "storybook": "start-storybook -p 6006 --no-manager-cache -c ../.storybook",
    "test-storybook": "cd ..; test-storybook"
  },
  "dependencies": {
    "@carbon/themes": "10",
    "@storybook/addon-docs": "6",
    "@storybook/addon-storysource": "^6.5.15",
    "stylelint-config-property-sort-order-smacss": "^9.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/eslint-parser": "^7.17.0",
    "@carbon/themes": "10",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@storybook/addon-a11y": "^6.5.13",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/test-runner": "~0.9.4",
    "@storybook/vue3": "^6.5.13",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/user-event": "^14.4.3",
    "@testing-library/vue": "^6.6.1",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-plugin-unit-jest": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/test-utils": "^2.2.4",
    "@vue/vue3-jest": "^27.0.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.3.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.2",
    "eslint": "^8.28.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^8.7.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.5.0",
    "pinst": "^3.0.0",
    "postcss": "^8.4.19",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.56.1",
    "sass-loader": "^12.6.0",
    "storybook": "^6.5.13",
    "style-loader": "^3.3.1",
    "stylelint": "^14.15.0",
    "typescript": "^4.9.3",
    "vue-loader": "^17.0.1",
    "webpack": "^5.75.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-debugger": "warn",
      "no-unused-vars": [
        "warn",
        {
          "ignoreRestSiblings": true
        }
      ],
      "no-plusplus": "off",
      "no-undef": "off",
      "no-var": "error",
      "semi": [
        "error",
        "always"
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{scss,css,js,md,vue}": [
      "yarn format:staged"
    ]
  },
  "sideEffects": true
}
