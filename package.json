{
  "name": "carbon-components-vue",
  "description": "[Experimental] Vue implementation of the Carbon Design System",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/carbon-design-system/carbon-components-vue.git"
  },
  "bugs": {
    "url": "https://github.com/carbon-design-system/carbon-components-vue/issues/new"
  },
  "sideEffects": true,
  "scripts": {
    "ci-check": "yarn format:diff",
    "format": "prettier --write \"**/*.{scss,css,js,md,vue}\"",
    "format:diff": "prettier --list-different \"**/*.{scss,css,js,md,vue}\"",
    "lint:es": "eslint --ext .js,.vue src",
    "lint:css": "stylelint 'src/**/*.vue'",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook-build": "build-storybook"
  },
  "peerDependencies": {},
  "dependencies": {
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-vue": "^2.0.2",
    "carbon-components": "^9.48.1",
    "carbon-icons": "^7.0.7",
    "flatpickr": "4.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@storybook/addon-actions": "^4.1.3",
    "@storybook/addon-knobs": "^4.1.3",
    "@storybook/addon-notes": "^4.1.3",
    "@storybook/addon-options": "^4.1.3",
    "@storybook/addon-storysource": "^4.1.3",
    "@storybook/vue": "^4.1.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.10.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "husky": "^1.3.0",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.15.3",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.9.0",
    "stylelint-config-property-sort-order-smacss": "^4.0.1",
    "stylelint-config-sass-guidelines": "^5.3.0",
    "vue": "^2.5.21",
    "vue-highlightjs": "^1.3.3",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.21"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{scss,css,js,md,vue}": [
      "yarn format",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
