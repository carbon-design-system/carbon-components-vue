{
  "name": "carbon-components-vue",
  "description": "A collection of components for the Carbon Design System built using Vue.js",
  "version": "1.1.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbon-design-system/carbon-components-vue.git"
  },
  "bugs": {
    "url": "https://github.com/carbon-design-system/carbon-components-vue/issues/new"
  },
  "homepage": "https://github.com/carbon-design-system/carbon-components-vue#readme",
  "sideEffects": true,
  "scripts": {
    "build": "lerna exec yarn build --no-prefix --concurrency 1",
    "ci-check": "yarn format:diff",
    "format": "prettier --write \"**/*.{scss,css,js,md,vue}\"",
    "format:diff": "prettier --list-different \"**/*.{scss,css,js,md,vue}\"",
    "format:staged": "prettier --write",
    "lint": "vue-cli-service lint",
    "lint:css": "stylelint '{packages,storybook}/**/*.{vue,scss}'",
    "lint:es": "eslint {packages,storybook}/**/*.{js,vue}",
    "lint:style": "vue-cli-service lint:style",
    "prepare": "lerna bootstrap",
    "start": "lerna exec yarn start --scope storybook",
    "test": "vue-cli-service test:unit",
    "reinstall": "find . -name node_modules -type d -prune -exec echo Removing {} ';' -exec rm -rf {} ';' && echo Clearing yarn cache && yarn cache clean && echo Removing yarn offline mirror && rm -rf \"./.yarn-offline-mirror\" && yarn install"
  },
  "devDependencies": {
    "@ascendancyy/vue-cli-plugin-stylelint": "^1.1.2",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@vue/cli-plugin-babel": "^3.5.3",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-plugin-unit-jest": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.10.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "husky": "^1.3.0",
    "jest": "^24.1.0",
    "jest-config": "^24.1.0",
    "jest-runtime": "^24.1.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.15.3",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.9.0",
    "stylelint-config-property-sort-order-smacss": "^4.0.1",
    "stylelint-config-sass-guidelines": "^5.3.0",
    "vue": "^2.6.10",
    "vue-jest": "^3.0.2",
    "vue-template-compiler": "^2.6.10"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{scss,css,js,md,vue}": [
      "yarn format:staged",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "no-debugger": "warn",
      "no-unused-vars": "warn",
      "no-plusplus": "off",
      "no-undef": "off",
      "no-var": "error",
      "semi": [
        "error",
        "always"
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/packages/core/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/__tests__/*.test.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/"
  }
}
