{
  "npmClient": "yarn",
  "npmClientArgs": ["--frozen-lockfile"],
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/docs/**",
    "**/e2e/**",
    "**/examples/**",
    "**/*.md",
    "**/*-story.js",
    "**/*-stories.*"
  ]
}
